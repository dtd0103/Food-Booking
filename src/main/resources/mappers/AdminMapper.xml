<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dtdat.javaweb.exam.mapper.AdminMapper">
	<select id="findByUsername" resultType="com.dtdat.javaweb.exam.entity.Admin">
		SELECT
		username,
		password
		FROM admin
		WHERE username = #{username}
	</select>
	
	<insert id="insertAdmin" parameterType="com.dtdat.javaweb.exam.entity.Admin">
		INSERT INTO
		admin (username, password)
		VALUES (#{username}, #{password})
	</insert>
</mapper>